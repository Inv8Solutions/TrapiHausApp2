<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Circle background -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#F9FAFB" />
        </shape>
    </item>

    <!-- Image with padding to fit inside circle -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <scale android:scaleGravity="center" android:scaleWidth="80%" android:scaleHeight="80%"/>
        </shape>
    </item>
</layer-list>