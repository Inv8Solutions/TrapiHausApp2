<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Wrap the main content container in a ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- This LinearLayout holds all the included sections vertically -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- The included layouts are now scrollable as children of the LinearLayout inside the ScrollView -->
            <include layout="@layout/listing_details_hero_section"/>
            <include layout="@layout/listing_details_title_loc_section"/>
            <include layout="@layout/listing_details_host_section"/>
            <include layout="@layout/listing_details_amenity_section"/>
            <include layout="@layout/listing_details_about_place"/>

            <include layout="@layout/listing_details_review_section"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>