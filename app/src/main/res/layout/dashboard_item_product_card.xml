<?xml version="1.0" encoding="utf-8"?>
<!--
    This XML defines the layout for a single item
    in the RecyclerView's 2x2 grid.
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <!-- Overall Vertical Layout Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- A. IMAGE AND OVERLAYS SECTION (using FrameLayout for stacking) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <!-- 1. Property Image -->
            <ImageView
                android:id="@+id/property_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/property_image_description"
                android:scaleType="centerCrop"
                tools:src="@drawable/property_placeholder"
                android:background="@android:color/darker_gray"/> <!-- Placeholder background -->

            <!-- 2. Verified Badge (Top Left Overlay) -->
            <!-- Use a dedicated background drawable (bg_rounded_green_badge) for the style -->
            <TextView
                android:id="@+id/verified_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                tools:background="@drawable/bg_rounded_green_badge"
                android:background="#4CAF50"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:text="Verified"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:drawableStart="@drawable/check"
                tools:ignore="RtlSymmetry" />

            <!-- 3. Favorite/Heart Button (Top Right Overlay) -->
            <!-- Use a transparent background for the button circle, assuming bg_white_circle is defined -->
            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                tools:background="@drawable/bg_white_circle"
                android:background="@drawable/bg_white_circle"
                tools:src="@drawable/saved_icon"
                app:tint="@android:color/holo_red_light"
                android:scaleType="center"
                android:padding="8dp"/>

        </FrameLayout>

        <!-- B. TEXT CONTENT SECTION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Title -->
            <TextView
                android:id="@+id/property_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Loakan Heights Residences"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 2. Location -->
            <TextView
                android:id="@+id/property_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                tools:text="Near Camp John Hay"
                android:textColor="#777777"
                android:textSize="14sp"
               android:drawableStart="@drawable/location_icon" />

            <!-- 3. Price Block -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <!-- Price -->
                <TextView
                    android:id="@+id/property_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="P6,300"
                    android:textColor="#1976D2"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <!-- Price Suffix -->
                <TextView
                    android:id="@+id/price_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="/month"
                    android:textColor="#777777"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>