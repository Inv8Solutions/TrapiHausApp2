<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- 1. Host Profile Picture (Circular Image) -->
        <!-- Using CircleImageView for the best result -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/host_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/imagetest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <!-- 2. Text Stack Container (Vertical Layout) -->
        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/host_profile_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/contact_button">

            <!-- Dynamic Title -->
            <TextView
                android:id="@+id/host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hosted by Maria Santos"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Dynamic Host Status/Date -->
            <TextView
                android:id="@+id/host_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Host â€¢ Since October 2025"
                android:textColor="#757575"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 3. Contact Button (Dynamic) -->
        <Button
            android:id="@+id/contact_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:backgroundTint="#8BC34A"
            android:text="Contact"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>